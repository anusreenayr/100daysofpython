import os
import time

# Define the to-do list
myAgenda = []

# Subroutine to print the list in a nice way
def printList():
    os.system('cls' if os.name == 'nt' else 'clear')  # Clear the screen
    print("ğŸ“ To-Do List Manager ğŸ“\n")
    if myAgenda:
        for i, item in enumerate(myAgenda, 1):
            print(f"{i}. {item}")
    else:
        print("Your to-do list is currently empty!")
    print()

# Subroutine to add an item to the list
def addItem():
    item = input("ğŸŸ¢ What's next on the Agenda?: ").strip()
    if item not in myAgenda:
        myAgenda.append(item)
        print(f"âœ… '{item}' added to your agenda.")
    else:
        print(f"âš ï¸ '{item}' is already on your agenda. No duplicates allowed!")
    time.sleep(1)

# Subroutine to edit an item on the list
def editItem():
    printList()
    try:
        item_num = int(input("âœï¸ Enter the item number to edit: ")) - 1
        if 0 <= item_num < len(myAgenda):
            new_text = input("âœï¸ Enter the new text: ").strip()
            myAgenda[item_num] = new_text
            print(f"âœ… Item updated to: '{new_text}'")
        else:
            print("âš ï¸ Invalid item number.")
    except ValueError:
        print("âš ï¸ Please enter a valid number.")
    time.sleep(1)

# Subroutine to remove an item from the list
def removeItem():
    printList()
    item = input("ğŸ”´ Enter the exact name of the item to remove: ").strip()
    if item in myAgenda:
        confirm = input(f"Are you sure you want to remove '{item}'? (yes/no): ").strip().lower()
        if confirm == "yes":
            myAgenda.remove(item)
            print(f"âœ… '{item}' removed from your agenda.")
        else:
            print("âš ï¸ Removal cancelled.")
    else:
        print(f"âš ï¸ '{item}' was not found in the list.")
    time.sleep(1)

# Subroutine to clear the entire list
def clearList():
    confirm = input("Are you sure you want to erase the entire list? (yes/no): ").strip().lower()
    if confirm == "yes":
        myAgenda.clear()
        print("ğŸ§¹ To-do list cleared.")
    else:
        print("âš ï¸ Clear list cancelled.")
    time.sleep(1)

# Main program loop
while True:
    os.system('cls' if os.name == 'nt' else 'clear')
    print("ğŸ“ To-Do List Manager ğŸ“")
    action = input("Would you like to view, add, edit, remove, clear, or quit?: ").strip().lower()

    if action == "view":
        printList()
        input("Press Enter to continue...")  # Pause to view the list
    elif action == "add":
        addItem()
    elif action == "edit":
        editItem()
    elif action == "remove":
        removeItem()
    elif action == "clear":
        clearList()
    elif action == "quit":
        print("Goodbye! Have a productive day! ğŸ‘‹")
        break
    else:
        print("âš ï¸ Invalid choice. Please choose 'view', 'add', 'edit', 'remove', 'clear', or 'quit'.")
        time.sleep(1)
